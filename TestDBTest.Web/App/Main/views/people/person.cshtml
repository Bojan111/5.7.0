<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card main-content">
        <div class="row clearfix" ng-controller="app.views.people.person as vm">
                  <div class="header">
                <h2>
                    @L("People")
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>LastName</th>
                            <th>FullNAe</th>
                            <th>Date Of Birth</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="person in vm.people">
                        <tr>
                            <td>{{person.name}}</td>
                            <td>{{person.lastName}}</td>
                            <td>{{person.fullName}}</td>
                            <td>{{person.dateOfBirthFormatted}}</td>
                            <td>{{person.age}}</td>
                            <td>{{person.genderFormatted}}</td>
                            <td>{{person.assignedCountryCountry}}</td>
                            <td>{{person.assignedCountryCity}}</td>
                          
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a class="waves-effect waves-block" ng-click="vm.openPersonEditModal(person)"><i class="material-icons">create</i>Edit</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(person)"><i class="material-icons">delete_sweep</i>Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="button" data-toggle="modal" style="margin-right: 26px; margin-bottom: 23px" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openTaskCreationModal()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>