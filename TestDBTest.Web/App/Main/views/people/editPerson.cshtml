<div>
    <div>
        <form id="PeopleTask" role="form" name="createTaskForm" novalidate>

            <div class="modal-header">
                <button type="button" class="close" aria-label="Close" ng-click="vm.cancel()">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <span>@L("EditPerson")</span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-group form-float">
                    <div class="form-line">
                        <label>@L("FirstName")</label>
                        <input class="form-control" type="text" name="PersonName" ng-model="vm.people.name" required maxlength="64" minlength="2">
                    </div>
                </div>
                <div class="form-group form-float">
                    <div class="form-line">
                        <label>@L("LastName")</label>
                        <input class="form-control" type="text" name="PersonName" ng-model="vm.people.lastName" required maxlength="64" minlength="2">
                    </div>
                </div>
                <div class="form-group form-float">
                    <div class="form-line">
                        <label>@L("DateOfBirth")</label>
                        <input type="date" ng-model="vm.people.dateOfBirth">
                    </div>
                </div>
                <div class="form-group form-float">
                    <div class="form-group form-float">
                        <label for="PersonGender">@L("Gender")</label>
                        <select id="PersonGender" class="form-control" ng-model="vm.people.gender">
                            <option value="0">Машки</option>
                            <option value="1">Женски</option>
                        </select>
                    </div>
                </div>
                <div class="form-group form-float">
                    <label for="TaskAssignedPerson">@L("Country")</label>
                    <select id="TaskAssignedPerson" class="form-control" ng-model="vm.people.assignedCountryId" ng-options="country.id as country.country for country in vm.countries">
                        <option value="">@L("SelectCountry")</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
                <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="tenantCreateForm.$invalid">@L("Save")</button>
            </div>

        </form>
    </div>
</div>

